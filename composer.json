{
  "name": "igorbenic/wp-plugin-library",
  "version": "1.0.0",
  // We want this to be something used within WP products, so it's a dropin
  "type": "wordpress-dropin",
  "require-dev": {
    // We might want to sniff for style/code errors.
    "squizlabs/php_codesniffer": "^3.2",
    // For easier installing of various standards.
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    // We also want the WP Coding Standards?
    "wp-coding-standards/wpcs": "*" 
  },
  "require": {
    // We need this so we can manipulate where to install it in other products
    "composer/installers": "~1.0" 
  }
}
